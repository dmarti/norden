{
    "manifest_version": 2,
    "name": "norden-yt",
    "version": "0.2",
    "description": "remove recommendations and prevent auto-play of next video on YouTube",
    "permissions": ["storage"],
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["youtube.js"],
            "run_at": "document_idle"
        }
    ]
}
